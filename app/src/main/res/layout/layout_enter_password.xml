<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="bottom"
    android:padding="@dimen/_20sdp">

    <TextView
        android:id="@+id/txtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/enter_security_code"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/_15sdp" />

    <in.aabhasjindal.otptextview.OtpTextView
        android:id="@+id/otpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/black"
        app:bar_enabled="false"
        app:bar_height="2dp"
        app:height="@dimen/_30sdp"
        app:length="6"
        app:otp_box_background="@drawable/rounded_transaction_background"
        app:otp_box_background_error="@drawable/rounded_error_background"
        app:otp_text_size="@dimen/_15sdp"
        app:width="@dimen/_30sdp" />

    <TextView
        android:id="@+id/txtOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/otpView"
        style="@style/RippleEffect"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/rounded_corner_green"
        android:gravity="center"
        android:paddingBottom="@dimen/_5sdp"
        android:paddingLeft="@dimen/_25sdp"
        android:paddingRight="@dimen/_25sdp"
        android:paddingTop="@dimen/_5sdp"
        android:text="@string/ef_ok"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp" />

</RelativeLayout>